@model Blog.ViewModels.AuthorsCategoriesViewModel

<div class="container">
    <div class="row">
        <!-- Left -->
        <div class="col-md-6">
            <h3>Yazarlar</h3>
            @if (Model.Authors.Any()) {
                <ul class="list-group">
                    @foreach (var author in Model.Authors)
                    {
                        <li class="list-group-item">
                            <a href="/author/@author.Id">@author.Name (@author.BlogPosts.Count())</a>
                        </li>
                        <hr />
                    }
                </ul>
			}
			else
			{
				<p>Yazar bulunamadı.</p>
			}
        </div>

        <!-- Right -->
        <div class="col-md-6">
            <h3>Kategoriler</h3>
            @if (Model.Categories.Any()) {
                <ul class="list-group">
                    @foreach (var category in Model.Categories)
                    {
                        <li class="list-group-item">
                            <a href="/category/@category.Id">@category.Name (@category.BlogPosts.Count())</a>
                        </li>
                        <hr />
                    }
                </ul>
            }
            else {
				<p>Kategori bulunamadı.</p>
            }
        </div>
    </div>
</div>
