@{
    ViewData["Title"] = "Yeni Blog Yazısı Ekle";
}

<div class="container mt-5">
    <h2 class="text-center">Yeni Blog Yazısı Ekle</h2>

    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label for="title" class="form-label">Başlık</label>
            <input type="text" id="title" name="Title" class="form-control" required>
        </div>

        <div class="mb-3">
            <label for="summary" class="form-label">Özet</label>
            <textarea id="summary" name="Summary" class="form-control" rows="3" required></textarea>
        </div>

        <div class="mb-3">
            <label for="content" class="form-label">İçerik</label>
            <textarea id="content" name="Content" class="form-control" rows="5" required></textarea>
        </div>

        <div class="mb-3">
            <label for="author" class="form-label">Yazar Seç</label>
            <div class="input-group">
                <select id="author" name="AuthorId" class="form-select" asp-items="ViewBag.Authors" required>
                    <option value="">Seçiniz</option>
                </select>
                <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#addAuthorModal">Ekle</button>
            </div>
        </div>

        <div class="mb-4">
            <label for="category" class="form-label">Kategori Seç</label>
            <div class="input-group">
                <select id="category" name="CategoryId" class="form-select" asp-items="ViewBag.Categories" required>
                    <option value="">Seçiniz</option>
                </select>
                <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#addCategoryModal">Ekle</button>
            </div>
        </div>

        <button type="submit" class="btn btn-primary w-100 mb-3">Kaydet</button>
    </form>

    <form asp-action="ClearDatabase" method="post">
        <button type="submit" class="btn btn-danger w-100 mt-4">Veritabanını Temizle</button>
    </form>
</div>

<!-- Add Author Modal -->
<div class="modal fade" id="addAuthorModal" tabindex="-1" aria-labelledby="addAuthorModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addAuthorModalLabel">Yeni Yazar Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-controller="Author" asp-action="Create" method="post">
                    <div class="mb-3">
                        <label for="authorName" class="form-label">Yazar Adı</label>
                        <input type="text" id="authorName" name="Name" class="form-control" required>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Yazar Ekle</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Add Category Modal -->
<div class="modal fade" id="addCategoryModal" tabindex="-1" aria-labelledby="addCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addCategoryModalLabel">Yeni Kategori Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-controller="Category" asp-action="Create" method="post">
                    <div class="mb-3">
                        <label for="categoryName" class="form-label">Kategori Adı</label>
                        <input type="text" id="categoryName" name="Name" class="form-control" required>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Kategori Ekle</button>
                </form>
            </div>
        </div>
    </div>
</div>

